<% layout("layout/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit listing</h3><br><br>
            <form method="POST" action="/listing/<%= data._id %>?_method=PATCH">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Title" type="text" value="<%= data.title %>" class="form-control">
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="Description" type="text" class="form-control"><%= data.description %></textarea>
                </div>
                
                <div class="mb-3">
                    <label for="image" class="form-label">Image URL</label>
                    <input name="listing[image]" placeholder="Image URL" type="url" value="<%= data.image %>" class="form-control">
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="Price" type="number" value="<%= data.price %>" class="form-control">
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="Country" type="text" value="<%= data.country %>" class="form-control">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="Location" type="text" value="<%= data.location %>" class="form-control">
                </div>
                <button class="btn btn-dark editBtn">Edit</button><br><br>
            </form>
        </div>
    </div>
</body>